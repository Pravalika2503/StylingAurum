<div class="panel panel-default">
	<div class="panel-heading">
		Style 
	</div>
	<div class="panel-body">
		<div class="container">
		<%= form_for @jewel, :html => { multipart: true } do |f| %>
			
			<div class="row">
				<div class="col-md-4 select">
					<div class="form-group">
						<label>Product code</label>
						<%= f.text_field :product_code, placeholder: "Enter code", class: "form-control" %>
					</div>
				</div>

					<div class="col-md-4 select">
						<div class="form-group">
							<label>Jewel Type</label>
							<%= f.select :jewel_type, [["Ear Rings","Ear Rings"], ["Necklace","Necklace"], ["Ring","Ring"],["Bangles","Bangles"]],prompt: "Select...", class: "form-control" %>
						</div>
					</div>


					<div class="col-md-4 select">
						<div class="form-group">
							<label>Metal Type</label>
							<%= f.select :metal_type, [["White-gold","White-gold"], ["Gold","Gold"], ["Silver","Silver"]],prompt: "Select...", class: "form-control" %>
						</div>
					</div>


					<div class="col-md-4 select">
						<div class="form-group">
							<label>Stone Type</label>
							<%= f.select :stone_type, [["Diamond","Diamond"],["Ruby","Ruby"], ["Emerald","Emerald"], ["Saphire","Saphire"]],prompt: "Select...", class: "form-control" %>
						</div>
					</div>
				</div>

				<div class="row">
					<div class="col-md-4">
						<div class="form-group">
							<label>Weight</label>
							<div class="input-group">
								<div class="input-group-addon"></div>
								<%= f.text_field :weight, placeholder: "eg. 25gms", class: "form-group" %>
							</div>	
						</div>
					</div>

					<div class="col-md-4">
						<div class="form-group">
							<label>Stone Weight</label>
							<div class="input-group">
								<div class="input-group-addon"></div>
								<%= f.text_field :stone_weight, placeholder: "eg. 25k", class: "form-group" %>
							</div>	
						</div>
					</div>
				</div>
					
				<div class="row">
					<div class="col-md-4">
						<div class="form-group">
							<label>Purity</label>
							<div class="input-group">
								<div class="input-group-addon"></div>
								<%= f.text_field :purity, placeholder: "eg. 90K", class: "form-group" %>
							</div>	
						</div>
					</div>


					<div class="col-md-4">
						<div class="form-group">
							<label>Pieces number</label>
							<div class="input-group">
								<div class="input-group-addon"></div>
								<%= f.text_field :pieces_number, placeholder: "eg. 3", class: "form-group" %>
							</div>	
						</div>
					</div>
				</div>

				<div class="row">
					<div class="form-group">
						<label>Listing name</label>
						<%= f.text_field :listing_name, placeholder: "Be clear and descriptive", class: "form-control" %>
					</div>
				</div>

				<div class="row">
					<div class="form-group">
						<label>Summary</label>
						<%= f.text_area :summary, rows: 5, placeholder: "Specifications", class: "form-control" %>
					</div>
				</div>

				<div class="row">
					<div class="form-group">
						<label>Address</label>
						<%= f.text_field :address, placeholder: "What is your address?", class: "form-control" %>
					</div>
				</div>

				<div class="row">
					<div class="col-md-4">
							<%= render 'reservations/form' %>
					</div>
				</div>

				<div class="row">
					<div class="col-md-4">
						<div class="form-group">
							<%= f.check_box :in_stock %> In Stock
						</div>
						<div class="form-group">
							<%= f.check_box :is_shipping %> Shipping available
						</div>
					</div>
				</div>

				<div class="row">
					<div class="col-md-4">
						<div class="form-group">
							<label>Price</label>
							<div class="input-group">
								<div class="input-group-addon">Rs</div>
								<%= f.text_field :price, placeholder: "eg. $100000", class: "form-control" %>
							</div>	
						</div>
					</div>
				</div>
				<div class="row">
					<div class="col-md-4">
						<div class="form-group">							
							<span class="btn btn-default btn-file">
							    <i class="fa fa-cloud-upload fa-lg"></i> Upload Photos 
							    <%= file_field_tag "images[]", type: :file, multiple: true %>
							</span>
						</div>		
					</div>
				</div>

				<div id="photos"><%= render 'photos/list' %></div>

				<div class="row">
					<div class="form-group">
						<%= f.check_box :active %> Active
					</div>
				</div>

				<div class="actions">
					<%= f.submit "Save", class: "btn btn-primary" %>
				</div>

			<% end %>

		</div>
	</div>
</div>